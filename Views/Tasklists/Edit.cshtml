@model TasklistProject1.Models.Tasklist

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar Tasklist</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Título</label>
                <input asp-for="TaskTitulo" class="form-control" />
                <span asp-validation-for="TaskTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                <input asp-for="TaskDescricao" class="form-control" />
                <span asp-validation-for="TaskDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Data Criação</label>
                <input asp-for="TaskDataCriacao" class="form-control" />
                <span asp-validation-for="TaskDataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Status</label>
                <select asp-for="TaskStatus" class="form-control">
                    <option value="ABERTO">Aberto</option>
                    <option value="CONCLUIDO">Concluído</option>
                </select>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><< Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
